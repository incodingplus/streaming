{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["./src"]
}
